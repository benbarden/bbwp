{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{ body_class }}" data-template="base.twig">

		<header class="header">
			{% block header %}
				<div class="wrapper title-area">
					<h1 class="site-title" role="banner">
						<a href="{{ site.url }}" rel="home">{{ site.name }}</a>
					</h1>
					<div class="site-description">{{ site.description }}</div>
				</div>
			{% endblock %}
		</header>

		<nav id="nav-main" class="nav-main" role="navigation">
			{% include "menu.twig" with {'items': menu.get_items} %}
		</nav>

		<div class="container-fluid main-outer">

			<div class="row">

				<div class="col-md-8 main-inner">
					{% if title %}<h1>{{ title }}</h1>{% endif %}
					<div class="wrapper {{ sidebar_class }}">
						{% block content %}
							There aren't any posts!
						{% endblock %}
					</div>
				</div>

				<div class="col-md-4 layout-sidebar">
					<div class="sidebar-content">
						{{ sidebar }}
					</div>
				</div>

			</div>

		</div>

		<div class="container-fluid">

			<div class="row">
				{% block footer %}
					<footer id="footer">
						{% include 'footer.twig' %}
					</footer>
					{{ function('wp_footer') }}
				{% endblock %}
			</div>

		</div>

		{#
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>


		<div class="content-sidebar-wrap">
			<main id="content" role="main" class="content-wrapper">
			</main>
			{% if sidebar %}
			{% endif %}
		</div>

		#}

	</body>

</html>
